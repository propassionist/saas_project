  <script>
    function mngPointModalFilter(){
      var input = $("#mngPointModalFilterText").val();
      var filter = input.toUpperCase();
      var modalList = $("#mngPointModal").find("tr[id*=modal-row]");
      // console.log(modalList);
      // console.log(modalList.get(0));
      
      for(let i=0; i<modalList.length; i++){
        let temp = $(modalList[i]).contents()[3];
        let textValue = temp.textContent || temp.innerText;
        if(textValue.toUpperCase().indexOf(filter) > -1){
          modalList[i].style.display = "";
        }else{
          modalList[i].style.display = "none";
        }
      }
    }

    function mngPointModalClick(mngPointCd, mngPointNm){
      $("#mngPointCd").val(mngPointCd);
      $("#mngPointNm").val(mngPointNm);
      // $("reportModal .close").click();
      $('#mngPointModal').modal('hide');
    }

    function reportModalFilter(){
      var input = $("#reportModalFilterText").val();
      var filter = input.toUpperCase();
      var modalList = $("#reportModal").find("tr[id*=modal-row]");
      // console.log(modalList);
      // console.log(modalList.get(0));
      
      for(let i=0; i<modalList.length; i++){
        let temp = $(modalList[i]).contents()[3];
        let textValue = temp.textContent || temp.innerText;
        // console.log($(modalList[i]));
        // console.log($(modalList[i]).contents());
        // console.log(textValue);
        if(textValue.toUpperCase().indexOf(filter) > -1){
          modalList[i].style.display = "";
        }else{
          modalList[i].style.display = "none";
        }
      }
    }

    function reportModalClick(rptCd, rptNm){
      $("#rptCd").val(rptCd);
      $("#rptNm").val(rptNm);
      // $("reportModal .close").click();
      $('#reportModal').modal('hide');
    }

  </script>

