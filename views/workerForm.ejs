<script>
  function userModalFilter(){
      var input = $("#userModalFilterText").val();
      var filter = input.toUpperCase();
      var modalList = $("#userModal").find("tr[id*=modal-row]");
      // console.log(modalList);
      // console.log(modalList.get(0));
      
      for(let i=0; i<modalList.length; i++){
        let temp = $(modalList[i]).contents()[3];
        let textValue = temp.textContent || temp.innerText;
        if(textValue.toUpperCase().indexOf(filter) > -1){
          modalList[i].style.display = "";
        }else{
          modalList[i].style.display = "none";
        }
      }
    }

    function userModalClick(userId, userNm){
      $("#userId").val(userId);
      $("#userNm").val(userNm);
      // $("reportModal .close").click();
      $('#userModal').modal('hide');
    }
</script>