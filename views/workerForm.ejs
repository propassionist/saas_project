          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">근무자관리 - 등록</h6>
            </div>
            <div class="card-body">
          <!-- ============================================================== -->
          <!-- Recent comment and chats -->
          <!-- ============================================================== -->
              <div class="row">
                  
                  <div class="col-md-12">
                <!-- Tabs -->
                      <div class="card">
                          <form class="form-horizontal" id="mform" method="POST">
                              <div class="card-body">
                                  <div class="form-group row">
                                    <label for="userId" class="col-sm-2 control-label col-form-label">회사 *</label>
                                    <div class="col-sm-10">
                                        <select class="select form-control custom-select" style="width: 100%;" id="bussCd" name="bussCd">
                                            <option value="">선택</option>
                                            <%
                                              for(var i=0; i<bussList.length; i++){
                                            %>
                                              <option value=<%=bussList[i].BUSSCD%>><%=bussList[i].BUSSNM%></option>
                                            <%
                                              }
                                            %>
                                        </select>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="userId" class="col-sm-2 control-label col-form-label">사업장 *</label>
                                    <div class="col-sm-10">
                                        <select class="select form-control custom-select" style="width: 100%;" id="siteCd" name="siteCd">
                                            <option value="">선택</option>
                                            <%
                                              for(var i=0; i<siteList.length; i++){
                                            %>
                                              <option value=<%=siteList[i].SITECD%>><%=siteList[i].SITENM%></option>
                                            <%
                                              }
                                            %>
                                        </select>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                      <label for="carNm" class="col-sm-2 control-label col-form-label">근무자코드</label>
                                      <div class="col-sm-10">
                                          <input type="text" class="form-control" id="workerCd" name="workerCd" value="E20200104" readonly>
                                      </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">근무자명 *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-invalid" id="name" name="name">
                                    </div>
                                  </div>
                                  <!-- <div class="form-group row">
                                    <label for="userId" class="col-sm-2 control-label col-form-label">근무구분 *</label>
                                    <div class="col-sm-10">
                                        <select class="select form-control custom-select" style="width: 100%;" id="siteCd">
                                            <option value="">선택</option>
                                            <option value="A01">정규직</option>
                                            <option value="A02">파트타임</option>
                                        </select>
                                    </div>
                                  </div> -->
                                  <div class="form-group row">
                                    <label for="userId" class="col-sm-2 control-label col-form-label">근무조 *</label>
                                    <div class="col-sm-10">
                                        <select class="select form-control custom-select" style="width: 100%;" id="workTyp" name="workTyp">
                                            <option value="">선택</option>
                                            <option value="B01">A</option>
                                            <option value="B02">B</option>
                                        </select>
                                    </div>
                                  </div>                                  
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">전화번호 *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-invalid" placeholder="ex) 010-0000-0000" id="telNo" name="telNo">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">이메일 *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-invalid" placeholder="ex) aaa@bbb.com" id="email" name="email">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">주소 *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-invalid" id="addr" name="addr">
                                    </div>
                                  </div>                                  
                                  <div class="form-group row">
                                      <label for="useDte" class="col-sm-2 control-label col-form-label">생년월일 *</label>
                                      <div class="col-sm-10">
                                          <input type="date" class="form-control" id="birthDay" name="birthDay" placeholder="yyyy/mm/dd">
                                      </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="useDte" class="col-sm-2 control-label col-form-label">입사일자 *</label>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control" id="startYmd" name="startYmd" placeholder="yyyy/mm/dd">
                                    </div>
                                  </div>
                                  <!-- <div class="form-group row">
                                      <label for="userId" class="col-sm-2 control-label col-form-label">사용자 *</label>
