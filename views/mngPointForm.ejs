<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>SB Admin 2 - Tables</title>

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">

  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <% include ./sidebar %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./topbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid font-16">
                

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">관리포인트</h1>
          <!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p> -->
          <p class="mb-4">관리포인트를 관리하는 메뉴 입니다.</p>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">관리포인트 관리 - 등록</h6>
            </div>
            <div class="card-body">
          <!-- ============================================================== -->
          <!-- Recent comment and chats -->
          <!-- ============================================================== -->
              <div class="row">
                  
                  <div class="col-md-12">
                <!-- Tabs -->
                      <div class="card">
                          <form class="form-horizontal" id="mform" method="post" action="/mngPoint/save">
                              <div class="card-body">
                                  <div class="form-group row">
                                    <!-- <label for="carNm" class="col-sm-2 control-label col-form-label">회사명 *</label> -->
                                    <div class="col-sm-10">
                                        <%=data != undefined ? data.BUSSNM : ''%>
                                        <input type="hidden" name="bussCd" value="<%=data != undefined ? data.BUSSCD : ''%>">
                                        <!-- <select name="buss" class="form-control is-invalid">
                                            <option value="">회사명</option>
                                            <option value="C001">한화시스템</option>
                                            <option value="C002">한화리조트</option>
                                        </select> -->
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">사업장 *</label>
                                    <div class="col-sm-10">
                                      <select name="site" class="form-control is-invalid">
                                      <%
                                        for(var i=0; i<site.length; i++){
                                      %>
                                        <option value="<%=site[i].SITECD%>" <%=data != undefined ? (site[i].SITECD == data.SITECD ? 'selected' : '') : ''%>><%=site[i].SITENM%></option>
                                        <!-- <option value="<%=site[i].SITECD%>" <%=site[i].SITECD == data.SITECD ? 'selected' : ''%>><%=site[i].SITENM%></option> -->
                                      <%
                                        }
                                      %>
                                    </select>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">관리포인트코드</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-invalid" id="mngPointCd" name="mngPointCd" value="<%=data.MNGPOINTCD != "" ? data.MNGPOINTCD : ''%>" readonly>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">관리포인트 *</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control is-invalid" name="mngPointNm" value="<%=data != undefined ? data.MNGPOINTNM : ''%>">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">비고</label>
                                    <div class="col-sm-10">
                                        <textarea name="remark" class="form-control" rows="2"><%=data != undefined ? data.REMARK : ''%></textarea>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="carNm" class="col-sm-2 control-label col-form-label">보고서 *</label>
                                    <div class="col-sm-10" style="display: inline-block;">
                                      <input type="text" class="form-control is-invalid" style="display:inline-block;width:60%;" id="rptNm" name="rptNm" value="<%=data != undefined ? data.RPTNM : ''%>" readonly>
                                      <input type="hidden" id="rptCd" name="rptCd" value="<%=data != undefined ? data.RPTCD : ''%>">
                                      <button type="button" class="btn btn-info" style="width:100px;" data-toggle="modal" data-target="#reportModal">선택
                                    </div>
                                  </div>
                              </div>
                              <div class="border-top">
                                  <div class="card-body" style="text-align: center;">
                                      <button type="submit" class="btn btn-info" id="mSubmit">저장</button>
                                      <button type="button" class="btn btn-info" onclick="location.href='/mngPoint'">목록</button>
                                  </div>
                              </div>
                          </form>
                      </div>
                      
                  </div>
              </div>
            </div>
          </div>
          <!-- ============================================================== -->
          <!-- Recent comment and chats -->
          <!-- ============================================================== -->
      </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <% include ./footer %>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  

  <!-- 보고서 양식 Modal-->
  <div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">보고서 양식</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="col-sm-10" style="display: inline-block;">
            <input type="text" class="form-control" style="display:inline-block;width:60%;" id="reportModalFilterText" onkeyup="reportModalFilter()">
            <!-- <button type="button" class="btn btn-info" onclick="modalSearch()" style="width:100px;">검색 -->
          </div>
          <hr>
          <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>보고서명</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>보고서명</th>
                      <th></th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <%
                    for(var i=0; i<rpt.length; i++){
                    %>
                    <tr id="modal-row-<%=i+1%>">
                      <td style="display:none;"><%=rpt[i].RPTCD%></td>
                      <td><%=rpt[i].RPTNM%></td>
                      <td align="center"><button type="button" class="btn btn-dark" style="width:70px;" onclick="reportModalClick('<%=rpt[i].RPTCD%>', '<%=rpt[i].RPTNM%>')">선택</td>
                    </tr>
                    <%
                    }
                    %>
                    <!-- <tr>
                      <td>청소상태관리</td>
                      <td align="center"><button type="button" class="btn btn-dark" style="width:70px;">선택</td>
                    </tr> -->
                  </tbody>
                </table>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>          
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>
  
  <script>
    function reportModalFilter(){
      var input = $("#reportModalFilterText").val();
      var filter = input.toUpperCase();
      var modalList = $("#reportModal").find("tr[id*=modal-row]");
      // console.log(modalList);
      // console.log(modalList.get(0));
      
      for(let i=0; i<modalList.length; i++){
        let temp = $(modalList[i]).contents()[3];
        let textValue = temp.textContent || temp.innerText;
        // console.log($(modalList[i]));
        // console.log($(modalList[i]).contents());
        // console.log(textValue);
        if(textValue.toUpperCase().indexOf(filter) > -1){
          modalList[i].style.display = "";
        }else{
          modalList[i].style.display = "none";
        }
      }
    }

    function reportModalClick(rptCd, rptNm){
      $("#rptCd").val(rptCd);
      $("#rptNm").val(rptNm);
      // $("reportModal .close").click();
      $('#reportModal').modal('hide');
    }
  </script>

</body>

</html>
